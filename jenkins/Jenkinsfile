pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_REGION = credentials('AWS_REGION')
    }

    stages {
        stage ('Plan') {
            steps {
                bat '''
                    terraform init
                    terraform plan
                '''
            }
        }

        stage ('Apply') {
            steps {
                input ('Approve?')
                bat '''
                    terraform init
                    terraform apply -auto-approve
                '''
            }
        }
    }
}

